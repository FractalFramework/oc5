{% extends ajaxMode == 'false' ? 'main.html.twig' : 'empty.html.twig' %}
{% block posts %}{% endblock %}
{% block post %}
	<div class="post">
	{{ dump(article) }}
		{{results.title }}
		<h1>{{article.title | raw }}</h1>
		<div class="excerpt">{{article.excerpt | raw }}</div>
		<div class="content">{{article.content | raw }}</div>
	</div>
{% endblock post %}

{% block comments %}
	<div class="comments">
		<h3>Commentaires</h3>
		{% for comment in comments %}
			<p>
				<strong>{{comment.surname | raw }}</strong>
				<span class="date">{{comment.date | raw }}</strong>
			</p>
			<p>{{comment.txt | raw }}</p>
		{% endfor %}

		{%if ( comments | length == 0 ) %}
		<div class="frame-white">{{nocomment | raw }}</div>
		{% endif %}

		<div class="">
			<a class="btsav" onclick="bg(this)" data-bj="newComment|newComment|postId={{id}}">
			Poster un commentaire
			</a>
		</div>
		<div id="newComment"></div>
	</div>
{% endblock comments %}
