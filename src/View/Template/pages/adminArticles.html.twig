{%  block table %}
        <table class="table">
            <tr>
                <th>id</td>
                <th>titre</td>
                <th>contenu</td>
                <th>Publié</td>
                <th>Voir</td>
            </tr>
        {% for result in results %}
            <tr>
                <td>{{result.id}}</td>
                <td>{{result.title | raw}}</td>
                <td>{{result.excerpt}}</td>
                <td>
                {% if (result.pub == 1) %}
                <a class="btn btn-success" onclick="bj(this)" data-bj="admin|adminArticlePub|publish=0,id={{result.id}}">Publié</a>
                {% else %}
                <a class="btn btn-warning" onclick="bj(this)" data-bj="admin|adminArticlePub|publish=1,id={{result.id}}">Dépublié</a>
                {% endif %}
                </td>
                <td>
                    <a class="btn btn-link" href="/post/{{result.id}}" onclick="return bh(this)">Voir</a>
                </td>
            </tr>
        {% endfor %}
        </table>
{%  endblock table %}
